{
    "name": "Copy 'n Carry",
    "version": "1.0",
    "description": "saves any text / links copied from any website and groups them by the source tab",
    "permissions": ["tabs", "storage", "clipboardRead", "clipboardWrite"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Copy 'n Carry - Copy and save content"
    },
    "icons": {
        "16": "./icons/3.png",
        "32": "./icons/3.png",
        "48": "./icons/2.png",
        "128": "./icons/1.png"
     },
    "manifest_version": 3

}